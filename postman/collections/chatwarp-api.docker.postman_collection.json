              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"to\": \"{{to_jid}}\",\n  \"content\": {\n    \"type\": \"text\",\n    \"text\": \"{{message_text}}\"\n  }\n}"
