        {
          "name": "POST /instance/create",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"{{instance_name}}\",\n  \"auto_connect\": false\n}"
            },
            "url": "{{base_url}}/instance/create"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('status is 201 or 409', function () {",
                  "  pm.expect([201, 409]).to.include(pm.response.code);",
                  "});",
                  "",
                  "try {",
                  "  const body = pm.response.json();",
                  "  if (body.instance) pm.environment.set('instance_name', body.instance);",
                  "} catch (e) {}"
                ]
              }
            }
          ]
        },
