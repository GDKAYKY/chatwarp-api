# =========================
# chatwarp-api (DEV / TEST)
# =========================

# Server
SERVER_NAME=evolution
SERVER_TYPE=http
SERVER_PORT=8080
SERVER_URL=http://localhost:8080
SERVER_DISABLE_DOCS=false
SERVER_DISABLE_MANAGER=false

# CORS
CORS_ORIGIN=*
CORS_METHODS=POST,GET,PUT,DELETE
CORS_CREDENTIALS=false

# TLS (ignored when SERVER_TYPE=http)
SSL_CONF_PRIVKEY=
SSL_CONF_FULLCHAIN=

# Provider session store
PROVIDER_ENABLED=false
PROVIDER_HOST=127.0.0.1
PROVIDER_PORT=5656
PROVIDER_PREFIX=evolution

# Database (required by runtime)
DATABASE_PROVIDER=postgresql
DATABASE_CONNECTION_URI=postgres://postgres:postgres@localhost:5432/evolution
DATABASE_CONNECTION_CLIENT_NAME=evolution-dev
DATABASE_SAVE_DATA_INSTANCE=true

# Auth
AUTHENTICATION_API_KEY=dev-api-key
AUTHENTICATION_EXPOSE_IN_FETCH_INSTANCES=true

# Sidecar gRPC (Node/Baileys bridge)
SIDECAR_GRPC_ENDPOINT=http://127.0.0.1:50051
SIDECAR_CONNECT_TIMEOUT_MS=3000

# Metrics
PROMETHEUS_METRICS=true
METRICS_AUTH_REQUIRED=false
METRICS_USER=metrics
METRICS_PASSWORD=metrics
METRICS_ALLOWED_IPS=127.0.0.1

# Event integrations (R1)
WEBSOCKET_ENABLED=true
WEBSOCKET_GLOBAL_EVENTS=true
RABBITMQ_ENABLED=false
RABBITMQ_GLOBAL_ENABLED=false
RABBITMQ_URI=amqp://guest:guest@localhost:5672/%2f
RABBITMQ_EXCHANGE_NAME=evolution_exchange

# Error webhook
WEBHOOK_EVENTS_ERRORS=false
WEBHOOK_EVENTS_ERRORS_WEBHOOK=

# Sentry / Telemetry
SENTRY_DSN=
TELEMETRY_ENABLED=false

# Facebook credentials endpoint
FACEBOOK_APP_ID=
FACEBOOK_CONFIG_ID=
FACEBOOK_USER_TOKEN=
