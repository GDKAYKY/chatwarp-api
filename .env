# =========================
# chatwarp-api (DEV / TEST)
# =========================

# Server
SERVER_PORT=8080
SERVER_BODY_LIMIT_KB=256

# Database (obrigatório — config.rs lê DATABASE_URL)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/chatwarp

# WhatsApp WebSocket endpoint (opcional — default: wss://web.whatsapp.com/ws/chat)
WA_WS_URL=wss://web.whatsapp.com/ws/chat

# Connect route timeout em ms (opcional — default: 300)
INSTANCE_CONNECT_WAIT_MS=300

# Logs (RUST_LOG aceito pelo tracing-subscriber)
RUST_LOG=debug